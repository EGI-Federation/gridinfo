config_info_service_bdii_site_check () {
	requires $1 SITE_NAME SITE_BDII_HOST INSTALL_ROOT
}

config_info_service_bdii_site_setenv () {
	yaimlog DEBUG "This function currently doesn't set any environment variables."
}

config_info_service_bdii_site () {

if [ -f ${INSTALL_ROOT}/glite/etc/glite-info-site-defaults.conf ]; then
   sed -i /^SITE_BDII_HOST/d ${INSTALL_ROOT}/glite/etc/glite-info-site-defaults.conf
   sed -i /^SITE_NAME/d ${INSTALL_ROOT}/glite/etc/glite-info-site-defaults.conf
fi

cat << EOF >> ${INSTALL_ROOT}/glite/etc/glite-info-site-defaults.conf
SITE_NAME=${SITE_NAME:-$(hostname -d) }
SITE_BDII_HOST=${SITE_BDII_HOST:-$(hostname -f)}

EOF

return 0

}


